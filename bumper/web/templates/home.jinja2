<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bumper</title>

    <link rel="stylesheet" href="static/css/bootstrap.min.css" />
    <link rel="stylesheet" href="static/css/custom.css" />
    <link rel="stylesheet" href="static/fonts/inter.css" />
    <script src="static/js/htmx.min.js"></script>
    <script src="static/js/main.js"></script>
  </head>
  <body>
    <div
      id="toast-container"
      class="toast-container position-fixed top-0 end-0 p-3"
    ></div>
    <div class="container-fluid my-4">
      <header class="mb-4">
        <h1 class="text-center">Bumper</h1>
      </header>

      <main class="grid-container">
        <!-- Section Stats -->
        <section>
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Server Status</h2>
            </div>
            <div
              class="card-body"
              hx-get="server-status"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/server_status.jinja2' %}
            </div>
          </div>
        </section>

        <section>
          <!-- Section Bots -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Bots</h2>
            </div>
            <div
              class="card-body"
              hx-get="bots"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/bots.jinja2' %}
            </div>
          </div>

          <!-- Section Clients -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Clients</h2>
            </div>
            <div
              class="card-body"
              hx-get="clients"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/clients.jinja2' %}
            </div>
          </div>

          <!-- Section Users -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Users</h2>
            </div>
            <div
              class="card-body"
              hx-get="users"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/users.jinja2' %}
            </div>
          </div>
        </section>
      </main>

      <footer>
        <div class="version">
          <a href="{{ github_repo }}" target="_blank" class="flex gap-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
            GitHub
          </a>
          <div data-orientation="vertical" class="split"></div>
          <a href="{{ github_release }}" target="_blank" class="flex gap-0.5">Bumper {{ app_version }}</a>
        </div>
      </footer>
    </div>
  </body>
</html>
